                    "range": {
                        "min": 0.6,
                        "max": 5.0
                    }
                },
                "auto_samples": {
                    "label": "Auto-Calibration Samples Taken",
                    "description": "number of samples to wait (at below auto_threshold) required to trigger auto recalibratoion",
                    "access": "rw",
                    "value": 100
                }
            }
